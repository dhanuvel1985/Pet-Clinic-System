{
  "Jwt": {
    "Issuer": "https://localhost:7061",
    "Audience": "pet_api",
    "RequireHttpsMetadata": false,
    "Secret": "SuperSecretJwtKey123!trainingdemo@12345$SuperSecretJwtKey123!trainingdemo@12345$"
  },

  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 104857600,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:01:00"
    },
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
